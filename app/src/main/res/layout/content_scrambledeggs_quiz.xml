<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="forkbomb.scrambledeggs.ScrambledEggsQuizActivity"
    tools:showIn="@layout/activity_scrambledeggs_quiz">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/activity_scrambledeggs_quiz_heading"
        android:textAlignment="center"
        android:textColor="@color/homeTitleColor"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="175dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorSecondary"
        android:onClick="onClick"
        android:text="@string/activity_scrambledeggs_quiz_btn"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wdg_seek" />

    <android.widget.SeekBar
        android:id="@+id/wdg_seek"
        android:layout_width="319dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:progressTint="@color/colorSecondary"
        android:thumb="@drawable/ic_slidericon512"
        app:layout_constraintEnd_toEndOf="@+id/txt_title"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/txt_title"
        app:layout_constraintTop_toBottomOf="@+id/length" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/activity_scrambledeggs_quiz_length"
        android:textColor="@color/homeTitleColor"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imggrid" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/imggrid"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title">

        <ImageView
            android:id="@+id/img_egg_1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/ic_quizegg1_512" />

        <ImageView
            android:id="@+id/img_egg_2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/ic_quizegg2_512" />

        <ImageView
            android:id="@+id/img_egg_3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/ic_quizegg3_512" />

        <ImageView
            android:id="@+id/img_egg_4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/ic_quizegg4_512" />

        <ImageView
            android:id="@+id/img_egg_5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_quizegg5_512" />

        <ImageView
            android:id="@+id/img_egg_6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_quizegg6_512" />

        <ImageView
            android:id="@+id/img_egg_7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_quizegg7_512" />

        <ImageView
            android:id="@+id/img_egg_8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_quizegg8_512" />

        <ImageView
            android:id="@+id/img_egg_9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/ic_quizegg9_512" />

        <ImageView
            android:id="@+id/img_egg_10"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/ic_quizegg10_512" />

        <ImageView
            android:id="@+id/img_egg_11"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/ic_quizegg11_512" />

        <ImageView
            android:id="@+id/img_egg_12"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/ic_quizegg12_512" />


    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>
