<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="forkbomb.scrambledeggs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="forkbomb.scrambledeggs.ScrambledEggsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="forkbomb.scrambledeggs.ScrambledEggsRandomActivity"
            android:label="@string/title_random"
            android:parentActivityName="forkbomb.scrambledeggs.ScrambledEggsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="forkbomb.scrambledeggs.ScrambledEggsActivity" />
        </activity>
        <activity
            android:name="forkbomb.scrambledeggs.ScrambledEggsQuizActivity"
            android:label="@string/title_quiz"
            android:parentActivityName="forkbomb.scrambledeggs.ScrambledEggsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="forkbomb.scrambledeggs.ScrambledEggsActivity" />
        </activity>
        <activity
            android:name="forkbomb.scrambledeggs.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="forkbomb.scrambledeggs.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:parentActivityName="forkbomb.scrambledeggs.ScrambledEggsQuizActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="forkbomb.scrambledeggs.ScrambledEggsQuizActivity" />
        </activity>
    </application>

</manifest>